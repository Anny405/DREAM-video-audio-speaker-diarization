# Whisper
FROM python:3.12-slim

# system deps
RUN apt-get update && apt-get install -y --no-install-recommends \
      ffmpeg git && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY video-transcript/requirements_whisper.txt /tmp/requirements_whisper.txt
RUN python -m pip install --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r /tmp/requirements_whisper.txt
CMD ["python", "main.py"]
